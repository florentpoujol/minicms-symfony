{% extends 'admin/base-admin.html.twig' %}

{% block title %}
    {% if isCreateForm %}
        Create a new article
    {% else %}
        Edit an article
    {% endif %}
{% endblock %}

{% block steelsheets %}
<style>

</style>
{% endblock %}

{% block body %}

<div>
    <h1>
        {% if isCreateForm %}
            Create a new article
        {% else %}
            Edit an article
        {% endif %}
    </h1>

    {% if not isCreateForm %}
        <ul>
            <li>Direct link to the article: <a href="{{ path('app_article_show', {'slug': article.slug}) }}">{{ article.title }}</a></li>
            <li>Created at: {{ article.createdAt | format_datetime('short', locale: 'fr') }} by {{  article.user.email }}</li>
            <li>Last updated at: {{ article.updatedAt | format_datetime('short', locale: 'fr') }}</li>
        </ul>
    {% endif %}

    {{ form(form) }}

    {% if not isCreateForm %}
    <div id="audit_logs">
        <h2>Audit Logs</h2>

        <table>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>User</th>
                <th>Action</th>
                <th>context</th>
                <th>data before</th>
                <th>data after</th>
            </tr>

            {% for log in auditLogs %}
                {% set data = log.getViewData() %}
                <tr>
                    <td>{{ data.id }}</td>
                    <td>{{ data.date }}</td>
                    <td>{{ data.userEmail }}</td>
                    <td>{{ data.action }}</td>
                    <td>{{ data.context }}</td>
                    <td><pre>{{ data.before }}</pre></td> <!-- pretty printed JSON -->
                    <td><pre>{{ data.after }}</pre></td>
                </tr>
            {% endfor %}
        </table>
    </div>
    {% endif %}

</div>
{% endblock %}
