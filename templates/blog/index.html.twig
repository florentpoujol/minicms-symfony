{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<div>
    <h1>Blog</h1>

    <h2>Articles</h2>

    {% for article in articles %}
        <article>
            <h3>{{ article.title }}</h3>
            <aside>Published on {{ article.publishedAt | format_datetime('full', locale: 'fr') }} by</aside>

            <p>
                {{ article.content }} ...
            </p>
        </article>

        <hr>
    {%  endfor %}
</div>
{% endblock %}
